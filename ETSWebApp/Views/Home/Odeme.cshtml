@model OdemeModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title></title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/css/prettyPhoto.css" rel="stylesheet">
    <link href="~/css/price-range.css" rel="stylesheet">
    <link href="~/css/animate.css" rel="stylesheet">
    <link href="~/css/main.css" rel="stylesheet">
    <link href="~/css/responsive.css" rel="stylesheet">

</head>

<body>

    <header id="header">
        @Html.Partial("_HeaderTop")
        @Html.Partial("_HeaderBottom")
    </header>

    <section id="form">
        <div class="container">
            <div class="row">
                <div class="center-block">
                    <div class="login-form">
                        <form asp-controller="Home" asp-action="Odeme"  method="post">
                            <div class="form-row">
                                <div class="form-group">
                                    <label for="inputState">Gider Türü</label>
                                    <select asp-for="GiderTuru" class="form-control">
                                        <option selected>Seçim yapınız...</option>
                                        <option>Elektrik</option>
                                        <option>Su</option>
                                        <option>Temizlik</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="odemeMiktar">Miktar</label>
                                    <input  class="form-control" asp-for="Miktarı" placeholder="Miktarı giriniz.">
                                </div>
                                <div class="form-group">
                                    <label for="odemeFiyat">Fiyat</label>
                                    <input  class="form-control" asp-for="Fiyati" placeholder="Fiyatı giriniz...">
                                </div>
                                <div class="form-group">
                                    <label for="odemeTarih">Ödeme Tarihi</label>
                                    <input type="datetime-local" class="form-control" asp-for="Tarihi">
                                </div>
                                <div class="form-group">
                                    <label for="odemeAciklama">Açıklama</label>
                                    <textarea class="form-control" asp-for="Aciklama"></textarea>
                                </div>


                            </div>

                            <button type="submit" value="Submit" class="btn btn-primary">Ödeme</button>
                        </form>
                    </div>

                </div>
            </div>
        </div>
    </section>

    @Html.Partial("_Footer")
    <script src="js/jquery.js"></script>
    <script src="js/price-range.js"></script>
    <script src="js/jquery.scrollUp.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/jquery.prettyPhoto.js"></script>
    <script src="js/main.js"></script>
</body>
</html>